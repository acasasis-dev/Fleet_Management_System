                                    <table class="table">
                                        <thead class=" text-primary">
                                            <th>Routes</th>
                                            <th>Unit</th>
                                            <th>Driver</th>
                                            <th>Action</th>
                                        </thead>
                                        <% dispatches.forEach( cur => { %>
                                        <tr>
                                            <td><%= cur.route_from + " - " + cur.route_to %></td>
                                            <td><%= cur.unitplate_no %></td>
                                            <td><%= cur.driver_ln + ", " + cur.driver_fn + " " + cur.driver_mn %></td>
                                            <td>
                                                <% if( !cur.time_dispatched ) { %>
                                                <form method="POST" action="/dispatcher/dispatch">
                                                    <input type="hidden" name="id" value="<%= cur.sched_id %>">
                                                    <button class="btn btn-success" type="submit" data-toggle="modal" data-target="#myModal3">
                                                        Dispatch 
                                                    </button>
                                                </form>
                                                <% } else { %>
                                                    DISPATCHED
                                                <% } %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                    </table>
