<% include templates/sidebar %>
<% include templates/topbar %>
<% include templates/footer %>
            <!-- End Navbar -->
            <div class="panel-header">
                <div class="header text-center">
                    <h1 class="title">Unit Type Minimum</h1>
                </div>
            </div>
            <div class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-body">
                                     <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                            <thead class=" text-primary">
                                                <th>Unit Type</th>
                                                <th>Minimum</th>
                                                <th>Action</th>
                                            </thead>
                                            <% records.forEach( cur => { %>
                                            <tr id="rec<%= cur.unittype_id %>">
                                                <td id="id" hidden><%= cur.unittype_id %></td>
                                                <td id="utype"><%= cur.unittype_desc %></td>
                                                <td id="minimum"><%= cur.unittype_minimum %></td>
                                                <td>
                                                    <div class="row">
                                                        <div class="">
                                                            <button class="btn btn-round btn-icon btn-sm btn-default" type="button" data-toggle="modal" data-target="#myModal3" onclick="edit( 'rec<%= cur.unittype_id %>', 'edit_form' )">
                                                                <i class="now-ui-icons design-2_ruler-pencil"></i> 
                                                            </button>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }) %>                              
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                    <!-- Modal -->                    
                    <div class="modal fade" id="myModal3" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5>Edit Minimum</h5>
                                    <button style="background: transparent; border:none;" type="button" data-dismiss="modal" aria-label="Close">
                                        <span aria=-hidden="true" class="now-ui-icons ui-1_simple-remove"></span>
                                    </button>
                                </div>
                                <form id="edit_form" action="/admin/utilities/minimum" method="POST">
                                <input type="hidden" name="id" id="id">
                                <div class="modal-body">
                                    <fieldset>
                                        <div class="row">                                            
                                            <div class="col-md-6">
                                                <div class="form-group">                                                    
                                                    <label class="col-md-12 control-label">Unit Type</label>
                                                        <input type="text" class="form-control" id="utype" disabled>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">                                                    
                                                    <label class="col-md-12 control-label">Minimum</label>
                                                        <input type="text" class="form-control" id="minimum" name="minimum">
                                                </div>
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                                <hr>
                                <div class="modal-footer">
                                    <button type="submit" style="margin-left:80%" class="btn btn-primary"> Submit </button>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- End of Modal -->
            <footer class="footer">
                <div class="container-fluid">
                </div>
            </footer>
        </div>
    </div>
    <% include templates/functions %>
    <script>
        
    </script>
</body>
<script>    
        var $this = $(this)
        $('#utilities').addClass('active');
        if($this.hasClass('show')) {
            $('#utitilities.collapse').slideDown('slow','swing').removeClass('show')
        }
        else{
            $('#utilities.collapse').slideUp('slow','swing').addClass('show')
        }
        $('#pagesUtilties.collapse').addClass('show');
        
        $('#min').addClass('active');
</script>