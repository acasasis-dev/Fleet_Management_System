<% include templates/sidebar %>
<% include templates/topbar %>
<% include templates/footer %>
            <!-- End Navbar -->
            <div class="panel-header">
                <div class="header text-center">
                    <h1 class="title">Driver License</h1>
                </div>
            </div>
            <div class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                                <div class="card-body">
                                    <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                        <thead class=" text-primary">
                                            <th>Driver</th>
                                            <th>License Expiration</th>
                                        </thead>
                                        <tbody id="data">
                                            <% for( x = 0; x < records.length; x ++ ) { %>
                                            <tr>
                                                <td><%= records[x].driver_ln + ", " + records[x].driver_fn + " " + records[x].driver_mn %></td>
                                                <td><%= records[x].driver_licexp.toDateString() %></td>
                                            </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                    </div>
            <footer class="footer">
                <div class="container-fluid">
                </div>
            </footer>
        </div>
    </div>
</body>
<script>
    $(document).ready(function(){
        var $this = $(this)
        $('#query').addClass('active');
        if($this.hasClass('show')) {
            $('#query.collapse').slideDown('slow','swing').removeClass('show')
        }
        else{
            $('#query.collapse').slideUp('slow','swing').addClass('show')
        }
        $('#pagesQueries.collapse').addClass('show');
        
        $('#licenseexpirationd').addClass('active');
    })
</script>