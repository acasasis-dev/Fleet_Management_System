<% include templates/sidebar %>
<% include ../templates/topbar %>
<% include ../templates/footer %>
            <!-- End Navbar -->
            <div class="panel-header panel-header-sm">
            </div> 
            <div class="content">
                <div class="row">                   
                  <div class="col-md-12">
                      <div class="card">
                        <div class="card-header">
                            <h5 class="card-category">Penalty Payment Logs</h5>
                            <h4 class="card-title"></h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                              <table class="table">
                                <thead class=" text-primary">
                                        <th>Name</th>
                                        <th>Date and Time</th>
                                        <th>Action</th>
                                    </thead>
                                    <tbody>
                                    <% records.forEach( cur => { %>
                                    <tr>
                                        <td><%= cur.driver_ln + ", " + cur.driver_fn + " " + cur.driver_mn %></td>
                                        <td><%= cur.pplog_time.toLocaleString() %></td>
                                        <td><a href="/collector/logs/penalty/view?id=<%= cur.pplog_id %>">Print</a></td>
                                    </tr>
                                    <% }) %>
                              </table>
                            </div>
                        </div>
                      </div>
                  </div>
                </div>
            </div>
            <footer class="footer">
                <div class="container-fluid">
        
                </div>
            </footer>
        </div>
    </div>
</body>

<script>
    $(document).ready(function(){
        var $this = $(this)
        
        $('#dash').addClass('active');
    })
</script>