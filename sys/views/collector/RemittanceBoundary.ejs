<% include templates/sidebar %>
<% include templates/topbar %>
<% include templates/footer %>

            <!-- End Navbar -->
            <div class="panel-header">
                <div class="header text-center">
                    <h1 class="title">Boundary Remittance</h1>
                </div>
            </div>
            <div class="content">
                <div class="row">
                    <div class="col-lg-12 col-md-6">
                        <div class="card card-chart">
                            <div class="card-header">
                                <h4 class="card-title"></h4>
                            <div class="card-body">
                                 <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                        <thead class=" text-primary">
                                            <th>Date</th>                                            
                                            <th>Amount</th>
                                            <th>Status</th>
                                        </thead>
                                        <% boundary_remittance_records.forEach( cur => { %>
                                        <tr>
                                            <td><%= cur.date_received.toDateString() %></td>
                                            <td><%= cur.amount %></td>
                                            <% if( cur.confirmed == 1 ) { %>
                                            <td><span class="badge badge-success">Collected</span></td>
                                            <% } else { %>
                                            <td><span class="badge badge-warning">Pending</span></td>
                                            <% } %>
                                        </tr>
                                        <% }) %>
                                    </table>
                            </div>
                            <div class="card-footer">
                            </div>
                        </div>
                    </div>
        </div>
    </div>
</body>

<script>
    $(document).ready(function(){
        var $this = $(this)
        $('#recs').addClass('active');
        if($this.hasClass('show')) {
            $('#recs.collapse').slideDown('slow','swing').removeClass('show')
        }
        else{
            $('#recs.collapse').slideUp('slow','swing').addClass('show')
        }
        $('#pagesRecords.collapse').addClass('show');
        
        $('#remitbound').addClass('active');
    })
</script>