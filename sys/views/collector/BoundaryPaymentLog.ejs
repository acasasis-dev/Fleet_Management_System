<% include templates/sidebar %>
<% include ../templates/topbar %>
<% include ../templates/footer %>
            <!-- End Navbar -->
            <div class="panel-header panel-header-sm">
            </div> 
            <div class="content">
                <div class="row">                   
                  <div class="col-md-12">
                      <div class="card">
                        <div class="card-header">
                            <h5 class="card-category">Boundary Payment Logs</h5>
                            <h4 class="card-title"></h4>
                        </div>
                        <div class="card-body">
                            <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead class=" text-primary">
                                        <th>Name</th>
                                        <th>Date and Time</th>
                                        <th>Action</th>
                                    </thead>
                                    <tbody>
                                    <% records.forEach( cur => { %>
                                    <tr>
                                        <td><%= cur.driver_ln + ", " + cur.driver_fn + " " + cur.driver_mn %></td>
                                        <td><%= cur.plog_time.toLocaleString() %></td>
                                        <td>
                                            <a href="/collector/logs/boundary/view?id=<%= cur.plog_id %>">
                                                <button class="btn btn-primary btn-round btn-sm"> Print</button>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %>
                              </table>
                        </div>
                      </div>
                  </div>
                </div>
            </div>
            <footer class="footer">
                <div class="container-fluid">
        
                </div>
            </footer>
        </div>
    </div>
</body>

<script>
    $(document).ready(function(){
        var $this = $(this)
        
        $('#dash').addClass('active');
    })
</script>